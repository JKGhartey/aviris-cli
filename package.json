{
  "name": "aviris-cli",
  "version": "1.0.4",
  "description": "CLI tool for installing Aviris UI components",
  "type": "module",
  "bin": "./dist/aviris.js",
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "yarn clean && yarn build",
    "test": "jest",
    "prepare": "yarn build"
  },
  "tsup": {
    "entry": [
      "src/bin/aviris.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "clean": true,
    "target": "node16",
    "platform": "node",
    "outDir": "dist"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^9.0.0",
    "fs-extra": "^10.0.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.17.17",
    "eslint": "^8.19.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.3.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cli",
    "aviris",
    "components",
    "ui",
    "react",
    "tailwindcss",
    "shadcn"
  ],
  "author": "Jerome Ghartey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkghartey/aviris-cli.git"
  },
  "bugs": {
    "url": "https://github.com/jkghartey/aviris-cli/issues"
  },
  "homepage": "https://aviris.vercel.app"
}
