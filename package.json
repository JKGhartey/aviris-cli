{
  "name": "@aviris/cli",
  "version": "1.0.0",
  "description": "CLI for installing and managing Aviris UI components",
  "type": "module",
  "bin": {
    "aviris": "./dist/bin/aviris.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "npm run test && npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cli",
    "components",
    "react",
    "ui",
    "typescript",
    "tailwind"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^0.34.0",
    "eslint": "^8.45.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
