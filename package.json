{
  "name": "aviris-cli",
  "version": "1.0.0",
  "description": "CLI tool for installing aviris components",
  "main": "index.js",
  "type": "module",
  "bin": {
    "aviris": "./index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "tsup": {
    "entry": [
      "src/bin/aviris.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "clean": true,
    "target": "node16",
    "platform": "node"
  },
  "dependencies": {
    "commander": "^9.0.0",
    "fs-extra": "^10.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.17.17",
    "@types/react": "^18.0.8",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^8.19.0",
    "react": "^18.2.0",
    "tailwind-merge": "^3.0.1",
    "tsup": "^8.3.6",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "keywords": [
    "cli",
    "aviris",
    "components",
    "ui"
  ],
  "author": "Jerome Ghartey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkghartey/aviris-cli"
  }
}
